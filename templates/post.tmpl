                        </div><!--/.nav-collapse -->
                    </div>
                </div>
            </div>
            <div class="container">
                <div id='content' class='row-fluid'>
                    <div class='span9 main'>
                        <h2>
                            <a href="/{{.Id()}}" style="text-decoration:none">{{.Title}}</a>
                        </h2>
                        <h6>
                            Published: {{.Date}} by <a href="/{{.Id()}}">{{.Author}}</a>
                        </h6>
                        <p>
                            {{.Content}}
                        </p>
                        <!-- Comments -->
                        <form action="/save/{{.Title}}" method="POST">
                  <div class="hero-unit" style="margin-top:20px">
                     <h3>Enter Your Comment Here <small>please <a href="/login.tmpl" title="login">login</a> before you post!</small></h3>
                     <hr/>
                     <textarea name="comment" class="textarea" placeholder="Enter comment ..." style="width: 710px; height: 100px"></textarea>
                     <div class="controls">
                        <button id="contact-submit" type="submit" class="btn btn-primary input-medium pull-right">Send</button>
                     </div>
                  </div>
               </form>
                    </div>
                    <div class='span3 sidebar'>
                        <h2>
                            More Fun
                        </h2>
                        <h4>
                            Archives
                        </h4>
                        <ul>
                            <li>
                                <a href='Archives'>Archives</a>
                            </li>
                        </ul>
                        <h4>
                            Labels
                        </h4>
                        <ul>
                            <li style="list-style: none">{{range .Labels}}
                            </li>
                            <li>
                                <a href="{{.Id}}" title="{{.Title}}">{{.Title}}</a>
                            </li>
                            <li style="list-style: none">{{end}}
                            </li>
                        </ul>
                    </div>
                </div>

            </div><!-- container -->
            <div id="push"></div>
